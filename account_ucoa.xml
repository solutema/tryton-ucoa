<?xml version="1.0"?>
<tryton>
    <data>

        <record model="account.account.type.template"
            id="ucoa">
            <field name="name">US Unified Account Type Chart</field>
            <field name="sequence" eval="10"/>
        </record>
        <record model="account.account.type.template"
            id="asset">
            <field name="name">Assets</field>
            <field name="sequence" eval="10"/>
            <field name="parent" ref="ucoa"/>
            <field name="balance_sheet" eval="True"/>
        </record>
        <record model="account.account.type.template"
            id="cash">
            <field name="name">Cash</field>
            <field name="sequence" eval="10"/>
            <field name="parent" ref="asset"/>
        </record>
         <record model="account.account.type.template"
            id="liability">
            <field name="name">Liabilities</field>
            <field name="sequence" eval="20"/>
            <field name="parent" ref="ucoa"/>
            <field name="balance_sheet" eval="True"/>
        </record>
        <record model="account.account.type.template"
            id="payable">
            <field name="name">Payables</field>
            <field name="sequence" eval="10"/>
            <field name="parent" ref="liability"/>
        </record>
        <record model="account.account.type.template"
            id="accrued_liability">
            <field name="name">Accrued Liabilities</field>
            <field name="sequence" eval="20"/>
            <field name="parent" ref="liability"/>
        </record>
        
        
        <record model="account.account.template" id="root">
            <field name="name">Unified Chart of Accounts</field>
            <field name="kind">view</field>
            <field name="type" ref="ucoa"/>
        </record>
        <record model="account.account.template" id="1">
            <field name="name">Assets</field>
            <field name="code">1</field>
            <field name="kind">view</field>
            <field name="parent" ref="root"/>
        </record>
        <record model="account.account.template" id="1000">
            <field name="name">Cash</field>
            <field name="code">1000</field>
            <field name="kind">view</field>
            <field name="parent" ref="1"/>
        </record>
        <record model="account.account.template" id="1010">
            <field name="name">Cash in bank-operating</field>
            <field name="code">1010</field>
            <field name="kind">other</field>
            <field name="type" ref="cash-in-bank"/>
            <field name="parent" ref="1000"/>
        </record>
        <record model="account.account.template" id="1020">
            <field name="name">Cash in bank-payroll</field>
            <field name="code">1020</field>
            <field name="kind">other</field>
            <field name="type" ref="cash-in-bank"/>
            <field name="parent" ref="1000"/>
        </record>
        <record model="account.account.template" id="1040">
            <field name="name">Petty Cash</field>
            <field name="code">1040</field>
            <field name="kind">other</field>
            <field name="type" ref="cash-on-hand"/>
            <field name="parent" ref="1000"/>
        </record>
        <record model="account.account.template" id="2">
            <field name="name">Liabilities</field>
            <field name="code">2</field>
            <field name="kind">view</field>
            <field name="parent" ref="root"/>
        </record>
        <record model="account.account.template" id="2000">
            <field name="name">Payables</field>
            <field name="code">2000</field>
            <field name="kind">view</field>
            <field name="parent" ref="2"/>
        </record>
        <record model="account.account.template" id="2010">
            <field name="name">Accounts payable</field>
            <field name="code">2010</field>
            <field name="kind">other</field>
            <field name="type" ref="payable"/>
            <field name="parent" ref="2000"/>
        </record>
        <record model="account.account.template" id="2020">
            <field name="name">Grants &amp; allocations payable</field>
            <field name="code">2020</field>
            <field name="kind">other</field>
            <field name="type" ref="payable"/>
            <field name="parent" ref="2000"/>
        </record>
        <record model="account.account.template" id="2100">
            <field name="name">Accrued Liabilities</field>
            <field name="code">2100</field>
            <field name="kind">view</field>
            <field name="parent" ref="root"/>
        </record>
        <record model="account.account.template" id="2140">
            <field name="name">Accrued sales taxes</field>
            <field name="code">2140</field>
            <field name="kind">other</field>
            <field name="type" ref="accrued_liability"/>
            <field name="parent" ref="2100"/>
        </record>
        
    </data>
</tryton>
